[Unit]
Description=DDNS Agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ddns-agent
EnvironmentFile=/etc/ddns-agent/agent.env
WorkingDirectory=${DDNS_WORKDIR}
ExecStart=/usr/bin/python3 -m agent.main
Restart=on-failure
ProtectSystem=strict
ProtectHome=yes
BindReadOnlyPaths=/etc/ddns-agent/config.enc.json
BindPaths=/var/lib/ddns-agent
CapabilityBoundingSet=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target
